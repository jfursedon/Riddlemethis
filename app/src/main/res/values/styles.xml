<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Main_Activity_Linear">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActivityCardView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>


    <style name="Question_Group">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:layout_margin">12dp</item>


    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Question_Title">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Question_Body">
        <item name="android:paddingBottom">6dp</item>

    </style>

    <style name="Radio_Group">

    </style>

    <style name="Radio_Button">

    </style>

    <style name="Check_Box">

    </style>

    <style name="Submit_Button">
        <item name="android:layout_margin">36dp</item>
        <item name="android:text">@string/submit_button</item>
    </style>
</resources>
